<header style="height: <%- theme.index.banner_img_height %>vh;">
    <figure id="centerbg" class="centerbg" style="background-image: url(<%- theme.index.banner_img %>); height: 100%; ">
        <div class="focusinfo">
            <h1 class="center-text glitch" data-text="<%- theme.index.grid_text %>">
                <%- theme.index.grid_text %>
            </h1>
            <div class="header-info">
                <p>
                    <i class="fa fa-quote-left"></i> 
                        <%- theme.index.subtitle %> 
                    <i class="fa fa-quote-right"></i>
                </p>
                <div class="top-social_v2">
                    <li id="bg-pre">
                        <img class="flipx" src="//cdn.jsdelivr.net/gh/LIlGG/halo-theme-sakura@1.3.1/source/images/next-b.svg">
                    </li>
                    <% for(const each of theme.index.social_icon || []) { %> 
                        <% if (!each.class) continue; %>
                        <li>
                            <a href="<%= each.links %>" title="<%= each.tip %> ">
                                <img src="/img/sns/<%= each.class %>.png">
                            </a>
                        </li>
                    <% } %> 
                    <li id="bg-next">
                        <img src="//cdn.jsdelivr.net/gh/LIlGG/halo-theme-sakura@1.3.1/source/images/next-b.svg">
                    </li>
                </div>
            </div>
        </div>
    </figure>
    <div class="headertop-down faa-float animated">
        <span><i class="fa fa-chevron-down" aria-hidden="true"></i></span>
    </div>
</header>

<div id="content" class="site-content">
    <% if(theme.notice.enable == true) { %> 
        <div class="notice" style="margin-top: 20px;">
		<i class="fa fa-bullhorn"></i>
		<div class="notice-content"><%= theme.notice.text %></div>
	</div>
    <% } %> 

    <div id="primary" class="content-area">
        <div id="main" class="site-main" role="main">
            <h1 class="main-title" style="font-family: 'Ubuntu', sans-serif;">
                <i class="fa fa-envira" aria-hidden="true"></i>
                <span class="i18n" data-iname="home.discovery"> 发现 </span>
            </h1>
            <%- partial('_tpl/content-thumb') %> 
        </div>
    </div>
</div>